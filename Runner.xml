<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="BookingFlights" parallel="methods" thread-count="8">

    <parameter name="BROWSER" value="CHROME"/>
    <parameter name="BROWSER_VERSION" value="97"/>
    <parameter name="WAIT_TIME" value="10"/>
    <parameter name="ENV" value="QA"/>

    <test name="Login">
        <classes>
            <class name="test.BookingFlightsTests">
                <methods>
                    <include name="testna metoda 1"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Add to cart">
        <classes>
            <class name="test.BookingFlightsTests">
                <methods>
                    <include name="testna metoda 2"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>